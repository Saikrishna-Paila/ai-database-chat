# ===========================================
# AI Database Chat - Environment Variables
# ===========================================

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ecommerce_db
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/ecommerce_db

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB=ecommerce_db
MONGODB_URL=mongodb://localhost:27017/ecommerce_db

# Langfuse Configuration (Observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Safety Settings
MAX_QUERY_ROWS=1000
QUERY_TIMEOUT_SECONDS=30
